<%= form_for @comment, url: idea_comments_path(@idea) do |c| %>

  <% if @comment.errors.any? %>
    <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <p><%= c.text_field :body, placeholder: "Add your comments here", class: "form-control" %></p>
  <%= c.submit "Submit", class: "btn btn-default" %>
<% end %>

<!DOCTYPE html>
<html>
<head>
  <title>IdeaFactory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="navbar navbar-default">
    <div class="container">
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><%= link_to "All Ideas", root_path, class: "btn btn-success" %></li>
        <li class="active"><%= link_to "New Idea", new_idea_path, class: "btn btn-success" %></li>
        <li> </li>
        <% if user_signed_in? %>
          <li><h3>Welcome <%= current_user.email %></h3><li>
          <li><%#= link_to "Joined", joined_path, class: "btn btn-warning" %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-success" %></li>
        <% else %>
          <li><%= link_to "Register", new_user_registration_path, class: "btn btn-success" %></li>
          <li><%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-sm-10 maincontent">
    <% if flash[:notice] %>
      <p class="alert alert-success"><%= notice %></p>
    <% elsif flash[:alert] %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

<%= yield %>

</div>

</body>
</html>
